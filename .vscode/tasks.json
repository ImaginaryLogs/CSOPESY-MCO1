{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/build.bat",
      "group": "build",
      "problemMatcher": ["$msCompile"],
      "windows": { "command": "${workspaceFolder}/scripts/build.bat" },
      "linux":   { "command": "${workspaceFolder}/scripts/build.sh" }
    },
    {
      "label": "Run",
      "type": "shell",
      "dependsOn": "Build",
      "command": "${workspaceFolder}/scripts/run.bat",
      "windows": { "command": "${workspaceFolder}/scripts/run.bat" },
      "linux":   { "command": "${workspaceFolder}/scripts/run.sh" }
    }
  ]
}
